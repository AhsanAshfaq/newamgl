                        <table style="border-collapse:separate;border-spacing:1px;margin-bottom:30px !important;width:90%;font-family:monospace !important;font-size:9px !important;">
                            <thead style="padding:5px !important;">
                                <tr>
                                    <th colspan="1"
                                        style="padding-bottom:5px !important;text-decoration:underline;text-align:left !important;">
                                        <span style="font-size:10px !important;" t-field="product.gs_product_code"/>
                                    </th>
                                    <th colspan="5"
                                        style="padding-bottom:5px !important;text-decoration:underline;text-align:left; !important;">
                                        <span style="font-size:10px !important;" t-field="product.goldstar_name"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th style="width:20%;border-bottom: 2px solid black !important;font-size:9px !important;text-align:left !important;">
                                        Last Name, Acct#
                                    </th>
                                    <th style="width:20%;border-bottom: 2px solid black !important;font-size:9px !important;text-align:left !important;">
                                        Full Client Name
                                    </th>
                                    <th style="width:15%;border-bottom: 2px solid black !important;font-size:9px !important;text-align:left !important;">
                                        Customer #
                                    </th>
                                    <th style="width:15%;border-bottom: 2px solid black !important;font-size:9px !important;text-align:right !important;">
                                        Segregated
                                    </th>
                                    <th style="width:15%;border-bottom: 2px solid black !important;font-size:9px !important;text-align:right !important;">
                                        Non-Segregated
                                    </th>
                                    <th style="width:15%;border-bottom: 2px solid black !important;font-size:9px !important;text-align:right !important;">
                                        Total
                                    </th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                            <tbody>
                                <t t-set="seg_total" t-value="0"/>
                                <t t-set="non_seg_total" t-value="0"/>
                                <t t-set="customers" t-value="docs.get_customers_against_product(product, 'Provident')"/>
                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="customers" t-as="customer">
                                    <t t-set="counter" t-value="counter + 1"/>
                                    <t t-set="customer_info"
                                       t-value="docs.get_customer_info_for_combined_holding_by_customer(customer, product)"/>
                                    <t t-if="customer_info">
                                        <tr>
                                            <td style="border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                <span t-esc="customer_info[0]"/>
                                            </td>
                                            <td style="border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                <span t-esc="customer_info[1]"/>
                                            </td>
                                            <td style="border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                <span t-esc="customer_info[2]"/>
                                            </td>
                                            <t t-if="counter == len(customers)">
                                                <td style="text-align:right !important;border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                    <span t-esc="'{0:,.2f}'.format(customer_info[3])"/>
                                                    <t t-set="seg_total" t-value="seg_total + customer_info[3]"/>
                                                </td>
                                                <td style="text-align:right !important;border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                    <span t-esc="'{0:,.2f}'.format(customer_info[4])"/>
                                                    <t t-set="non_seg_total"
                                                       t-value="non_seg_total + customer_info[4]"/>
                                                </td>
                                                <td style="text-align:right !important;border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                    <span t-esc="'{0:,.2f}'.format(customer_info[3] + customer_info[4])"/>
                                                    <t t-set="palladium_total"
                                                       t-value="palladium_total + (customer_info[3] + customer_info[4])"/>
                                                </td>
                                            </t>
                                            <t t-if="counter != len(customers)">
                                                <td style="text-align:right !important;border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                    <span t-esc="'{0:,.2f}'.format(customer_info[3])"/>
                                                    <t t-set="seg_total" t-value="seg_total + customer_info[3]"/>
                                                </td>
                                                <td style="text-align:right !important;border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                    <span t-esc="'{0:,.2f}'.format(customer_info[4])"/>
                                                    <t t-set="non_seg_total"
                                                       t-value="non_seg_total + customer_info[4]"/>
                                                </td>
                                                <td style="text-align:right !important;border-top: 1px solid white !important;border-bottom: 1px solid white !important;">
                                                    <span t-esc="'{0:,.2f}'.format(customer_info[3] + customer_info[4])"/>
                                                    <t t-set="palladium_total"
                                                       t-value="palladium_total + (customer_info[3] + customer_info[4])"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </t>
                                <tr style="padding:5px !important;">
                                    <td colspan="3"
                                        style="border-top:1px solid white !important;border-bottom:1px solid white !important;"></td>
                                    <td style="padding-top:5px;padding-bottom:5px;font-size:10px !important;font-weight:bold;border-top:1px solid black !important;border-bottom:1px solid black !important;text-align:right !important;">
                                        <span t-esc="'{0:,.2f}'.format(float(seg_total))"/>
                                    </td>
                                    <td style="padding-top:5px;padding-bottom:5px;font-size:10px !important;font-weight:bold;border-top:1px solid black !important;border-bottom:1px solid black !important;text-align:right !important;">
                                        <span t-esc="'{0:,.2f}'.format(float(non_seg_total))"/>
                                    </td>
                                    <td style="padding-top:5px;padding-bottom:5px;font-size:10px !important;font-weight:bold;border-top:1px solid black !important;border-bottom:1px solid black !important;text-align:right !important;">
                                        <span t-esc="'{0:,.2f}'.format(float(palladium_total))"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </center>
                </div>
                <t t-set="total_palladium_ounces"
                   t-value="total_palladium_ounces + docs.get_product_ounces(product, palladium_total)"/>
            </t>
            <div style="float:right;margin-bottom:30px;margin-right:30px;">
                <span style="padding:5px;font-size:10px !important;font-weight:bold;border-top:1px solid black !important;border-bottom:1px solid black !important;">
                    Total Palladium Ounces :
                </span>
                <span style="padding:5px;font-size:10px !important;font-weight:bold;border-top:1px solid black !important;border-bottom:1px solid black !important;"
                      t-esc="'{0:,.2f}'.format(total_palladium_ounces)"/>
            </div>
        </t>
        <div class="oe_structure"/>
    </template>
